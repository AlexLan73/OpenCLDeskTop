<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
  <Style TargetType="{x:Type Button}" x:Key="BorderlessButton">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
<!--#region  Для  -->
  <Style x:Key="StVdBlock" TargetType="TextBlock">
    <Setter Property="FontSize" Value="18"/>
  </Style>

  <Style x:Key="StVdBox" TargetType="TextBox">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="Margin" Value="5, 2, 5, 2"/>
  </Style>

  <Style x:Key="StVdCombo" TargetType="ComboBox">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="IsEditable" Value="True"/>
    <Setter Property="Margin" Value="5, 2, 5, 2"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="IsTextSearchEnabled" Value="True"/>
  </Style>

  <Style x:Key="StVdCheckBox" TargetType="CheckBox">
    <Setter Property="FontSize" Value="14"/>
  </Style>

  <Style x:Key="Border5" TargetType="Border">
    <Setter Property="BorderBrush" Value="Silver"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="5,5,5,5"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

  <Style x:Key="Border2" TargetType="Border">
    <Setter Property="BorderBrush" Value="Blue"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="5,5,5,5"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

<!-- 
    <Setter Property="BorderBrush" Value="Silver"/>
  
  -->  
  <Style x:Key="ClipBorder50" TargetType="mah:ClipBorder">
    <Setter Property="BorderBrush" Value="CadetBlue"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="5,5,5,5"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

  <Style x:Key="ClipBorder20" BasedOn="{StaticResource  ClipBorder50}" TargetType="mah:ClipBorder">
    <Setter Property="CornerRadius" Value="2,2,2,2"/>
  </Style>

  <Style x:Key="ClipBorder30" BasedOn="{StaticResource  ClipBorder50}" TargetType="mah:ClipBorder">
    <Setter Property="CornerRadius" Value="3,3,3,3"/>
  </Style>

  <Style x:Key="ClipBorder31" BasedOn="{StaticResource  ClipBorder30}" TargetType="mah:ClipBorder">
    <Setter Property="Margin" Value="1"/>
  </Style>

  <Style x:Key="Border10"  BasedOn="{StaticResource Border5}"  TargetType="Border">
    <Setter Property="CornerRadius" Value="10,10,10,10"/>
  </Style>

  <Style TargetType="{x:Type Button}" x:Key="BorderlessButton1">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="TextBlock" x:Key="TbVal0">
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="Margin" Value="2, 0, 2, 0"/>
    <Setter Property="Text" Value="{Binding Name}"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>
  <Style TargetType="TextBlock" x:Key="TbVal1">
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="Margin" Value="5, 0, 2, 0"/>
    <Setter Property="Text" Value="{Binding Variable}"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
  </Style>

  <Style TargetType="ListBoxItem" x:Key="ListBoxMin">
    <Setter Property="Margin" Value="-1"/>
    <Setter Property="BorderThickness" Value="0, 0, 0, 0"/>
  </Style>


  <!--#endregion-->
</ResourceDictionary>